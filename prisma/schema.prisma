datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

generator typegraphql {
    provider = "typegraphql-prisma"
    output   = "../graphql"
}

model Drink {
    IBA          String?
    alcoholic    String              @default("Alcoholic")
    category     String[]
    dateModified DateTime            @default(now())
    glass        String
    id           String              @id @default(auto()) @map("_id") @db.ObjectId
    image        String?
    ingredients  IngredientMeasure[]
    instructions String
    name         String?
    tags         String[]
}

model IngredientMeasure {
    id           String      @id @default(auto()) @map("_id") @db.ObjectId
    measure      String?
    ingredient   Ingredient? @relation(fields: [ingredientId], references: [id])
    ingredientId String?     @db.ObjectId
    Drink        Drink?      @relation(fields: [drinkId], references: [id])
    drinkId      String?     @db.ObjectId
}

type SpiritClassification {
    mainProductType String
    productType     String
    subProductType  String
}

type SpiritDescription {
    colour String
    odour  String
    taste  String
}

model Spirit {
    alcoholContent Float
    classification SpiritClassification
    description    SpiritDescription
    id             String               @id @default(auto()) @map("_id") @db.ObjectId
    ingredients    String
    name           String
    nameLong       String
    sugar          String
    volume         Float
    volumeType     String?
    type           SpiritType
    Ingredient     Ingredient[]
}

enum SpiritType {
    WINE
    BEER
    SPIRIT
}

model Ingredient {
    id                String              @id @default(auto()) @map("_id") @db.ObjectId
    name              String
    type              String
    spirit            Spirit?             @relation(fields: [spiritId], references: [id])
    spiritId          String?             @db.ObjectId
    IngredientMeasure IngredientMeasure[]
}
